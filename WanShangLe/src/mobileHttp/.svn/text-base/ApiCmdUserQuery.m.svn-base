- (id)init
{
    self = [super init];
    if (self) {
        // Initialization code here.
    }
    
    return self;
}

- (void) dealloc {
    [userInfo release];
	[super dealloc];
}

- (NSMutableDictionary*) getParamDict {
    NSMutableDictionary* paramDict = [[[NSMutableDictionary alloc] init] autorelease];
    
    [paramDict setObject:@"user.info" forKey:@"api"];
    return paramDict;
}


- (void) parseResultData:(NSDictionary*) dictionary {
    
    /***************************
     {
     cookie: "{"uid":"1","timestamp":1337568828}",
     errors: [ ],
     data: {
     user: {
     id: 1,
     email: "dev@huishow.com",
     nickname: "",
     phone: "",
     logo: "gp",
     last_login_time: 1337568828,
     create_time: 32767,
     update_time: 1337568828,
     sina_weibo_token: "",
     qq_weibo_token: "",
     qq_token: "",
     renren_token: ""
     }
     }
     }
     ***/
    
    // get the data
    NSDictionary* retData = defaultNilObject([dictionary objectForKey:@"data"]);
    
    if (nil == retData) {
        return;
    }
    
    // get user
    
    NSDictionary* userInfoDict = defaultNilObject([[retData objectForKey:@"info"] objectForKey:@"userInfo"]);
    
    if (nil == userInfoDict) {
        return;
    }
    
    // do parse
    UserInfo* tmpUserInfo = [[UserInfo alloc] init];  // no release here
    [tmpUserInfo parseData:userInfoDict];
    
    // relase the old one
    [userInfo release];
    userInfo = tmpUserInfo;
}

@end
